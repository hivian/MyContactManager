<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hivian.ft_hangouts.ContactSms">


    <ListView
        android:id="@+id/listView_sms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_marginBottom="60dp"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:background="@color/colorLightGray">
    </ListView>
    <RelativeLayout

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/sms_body"
            android:imeOptions="actionSend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp"
            android:inputType="textMultiLine"
            android:maxLines = "2"
            android:scrollbars = "vertical"
            android:layout_alignParentBottom="true"
            android:theme="@android:style/Theme.Holo.Light" />
        <ImageButton
            android:id="@+id/sms_sender"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitXY"
            android:tint="@android:color/darker_gray"
            android:src="@drawable/ic_send_black_75dp"
            android:background="@drawable/ic_send_black_75dp"
            android:onClick="sendSms" />
    </RelativeLayout>

</RelativeLayout>
