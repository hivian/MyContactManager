<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hivian.ft_hangouts.ContactInfo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryDark">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:padding="15dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_message_black_75dp"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:padding="15dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_call_black_75dp"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:padding="15dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_mode_edit_black_75dp"
                    android:onClick="editContact"
                    />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:padding="15dp"
                    android:tint="@android:color/white"
                    android:src="@drawable/ic_delete_black_75dp"
                    android:onClick="deleteContact"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="150dp"
                    android:id="@+id/info_image"
                    android:layout_margin="8dp"
                    android:tint="@android:color/darker_gray"
                    android:layout_height="145dp"
                    android:src="@drawable/ic_person_black_75dp"
                    android:cropToPadding="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:ems="10" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:ems="10"
                        android:id="@+id/info_name"
                        android:textColor="@color/colorDark"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:theme="@android:style/Theme.Holo.Light" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:ems="10" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:ems="10"
                        android:id="@+id/info_lastName"
                        android:textColor="@color/colorDark"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:theme="@android:style/Theme.Holo.Light" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/info_icon1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_call_black_75dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/info_phone"
                    android:textColor="@color/colorDark"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_marginLeft="10dp"
                    android:theme="@android:style/Theme.Holo.Light" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/info_icon2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_mail_black_75dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/info_email"
                    android:textColor="@color/colorDark"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:theme="@android:style/Theme.Holo.Light" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@+id/info_icon3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_place_black_75dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/info_address"
                    android:textColor="@color/colorDark"
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:layout_marginLeft="10dp"
                    android:theme="@android:style/Theme.Holo.Light" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
