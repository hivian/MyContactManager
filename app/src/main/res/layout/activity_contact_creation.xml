<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hivian.ft_hangouts.ContactCreation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="165dp" >

                <ImageView
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_width="150dp"
                    android:id="@+id/imageView1"
                    android:layout_margin="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_height="145dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:cropToPadding="false"
                    android:onClick="browseFolder" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:layout_weight="0.20"
                        android:ems="10"
                        android:id="@+id/name"
                        android:hint="@string/contact_name"
                        android:maxLength="20"
                        android:theme="@android:style/Theme.Holo.Light" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:ems="10"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.20"
                        android:ems="10"
                        android:id="@+id/lastName"
                        android:hint="@string/contact_lastName"
                        android:theme="@android:style/Theme.Holo.Light"
                        android:maxLength="20"
                        android:inputType="textPersonName" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.30"
                        android:ems="10"
                        />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:id="@+id/phone"
                android:hint="@string/contact_phone"
                android:theme="@android:style/Theme.Holo.Light"
                android:maxLength="20"
                android:inputType="phone" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:id="@+id/email"
                android:hint="@string/contact_email"
                android:theme="@android:style/Theme.Holo.Light"
                android:maxLength="30"
                android:inputType="textEmailAddress" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:id="@+id/address"
                android:hint="@string/contact_address"
                android:theme="@android:style/Theme.Holo.Light"
                android:maxLength="100"
                android:inputType="textPostalAddress" />

            <Button
                android:text="@string/contact_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_save"
                android:layout_marginTop="50dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/colorPrimary"
                android:onClick="saveContact" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
